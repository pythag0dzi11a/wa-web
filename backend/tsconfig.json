{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,
        "plugins": [
            {
                "transform": "typia/lib/transform"
            }
        ],
        "strictNullChecks": true
    },
    "include": ["src"]
}
