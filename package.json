{
    "name": "wa-web",
    "private": true,
    "scripts": {
        "dev": "pnpm run -r dev",
        "dev:backend": "cd backend && pnpm run dev",
        "dev:frontend": "cd frontend && pnpm run dev",
        "build": "pnpm run -r build && gulp post-build",
        "format": "prettier . --write",
        "format:backend": "prettier ./backend --write",
        "format:frontend": "prettier ./frontend --write",
        "format-check": "prettier . --check"
    },
    "devDependencies": {
        "fs-extra": "^11.2.0",
        "gulp": "^5.0.0",
        "prettier": "^3.3.3"
    }
}
